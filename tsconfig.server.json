{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "dist/server",

    "module": "es2022",
    "moduleResolution": "Node",
    "target": "ES2020",

    /* ðŸ‘‡ override the inherited true value */
    "allowImportingTsExtensions": false,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },

  "include": ["server/**/*", "shared/**/*", "scripts/**/*"],
  "exclude": ["client", "**/*.test.*"]
}
