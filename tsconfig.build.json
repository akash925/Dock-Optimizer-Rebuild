{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "dist/server",

    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2020",

    /* ðŸ‘‡ override the inherited true value */
    "allowImportingTsExtensions": false,

    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": false,
    "esModuleInterop": true,
    "types": [],
    
    /* ðŸ”§ Fix path mapping for proper runtime resolution */
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },

  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "scripts", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "**/__tests__/**", "**/tests/**"]
}
