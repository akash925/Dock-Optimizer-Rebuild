
modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]


build = ["pnpm", "run", "build"]

run = ["doppler", "run", "--config", "prd", "--", "pnpm", "start"]


hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]


[nix]
channel = "stable-24_05"
packages = [
  "doppler",
  "freetype",
  "jq",
  "lcms2",
  "libimagequant",
  "libjpeg",
  "libtiff",
  "libwebp",
  "openjpeg",
  "openssl",
  "poppler_utils",
  "tcl",
  "tk",
  "zlib",
]


[[ports]]
localPort = 5001
externalPort = 80
