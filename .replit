# .replit  (top of file, outside any table)
build = "rm -rf ~/.local/share/pnpm/store && pnpm install --force && pnpm run build"

install = [
  "sh",
  "-c",
  "rm -rf $HOME/.local/share/pnpm/store && pnpm install --frozen-lockfile --force",
]

# .replit  (top of file stays the same)
modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

run = ["pnpm", "start"] # workspace Run button ⬅︎

[nix]
channel = "stable-24_05"
packages = ["atk", "doppler", "freetype", "libimagequant", "libjpeg", "libpng", "libvips", "libwebp", "nss", "pango", "poppler_utils", "docker_25"]

# -----------------------------------------------------------------
[deployment]
deploymentTarget = "gce"
run = ["sh", "-c", "doppler run --config prd -- npx tsx server/index.ts"]
build = ["sh", "-c", "npm install -g pnpm@10.12.1 && pnpm install --frozen-lockfile && pnpm run build:client && npx tsc -p tsconfig.server.json --noEmit || true && pnpm prune --prod && rm -rf node_modules/.cache"]

[[ports]]
localPort = 443
externalPort = 3000

[[ports]]
localPort = 5001
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173
