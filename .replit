# .replit  (top of file, outside any table)
build = "rm -rf ~/.local/share/pnpm/store && pnpm install --force && pnpm run build"

install = [
  "sh",
  "-c",
  "rm -rf $HOME/.local/share/pnpm/store && pnpm install --frozen-lockfile --force",
]

# .replit  (top of file stays the same)
modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

run = ["pnpm", "start"] # workspace Run button ⬅︎

[nix]
channel = "stable-24_05"
packages = ["atk", "doppler", "freetype", "libimagequant", "libjpeg", "libpng", "libvips", "libwebp", "nss", "pango", "poppler_utils"]

# -----------------------------------------------------------------
[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "node dist/server/index.js"]

[[ports]]
localPort = 5001
externalPort = 80
